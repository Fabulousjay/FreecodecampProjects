{
  "name": "my-project",
  "roots": ["<rootDir>/src"],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "snapshotSerializers": ["enzyme-to-json/serializer"],
  "moduleNameMapper": {
    "^.+\\.(css|less|scss)$": "babel-jest"
  },
  "collectCoverageFrom": ["src/**/*.{js,jsx,ts,tsx}"]
}
